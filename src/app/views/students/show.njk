{% extends "layout.njk" %}

{% block content %}

<div class="card">
  <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover"></section>
  <section class="information">
      <h3>Informações do Estudante</h3>

      <div class="item">
          <div>Estudante</div>
          <div>{{student.name}}</div>
      </div>
      <div class="item">
          <div>Idade</div>
          <div>{{student.age}}</div>
      </div>
      <div class="item">
          <div>Aniversário</div>
          <div>{{student.birthDay}}</div>
      </div>
      <div class="item">
          <div>Email</div>
          <div>{{student.email}}</div>
      </div>
      <div class="item">
          <div>Período Escolar</div>
          <div>{{student.school_year}}</div>
      </div>
       <div class="item">
          <div>Carga Horária Semanal</div>
          <div>{{student.hours_week}}</div>
      </div>
      <a href="/students/{{student.id}}/edit" class="button">Editar</a>

  </section>
</div>

{% endblock %}
