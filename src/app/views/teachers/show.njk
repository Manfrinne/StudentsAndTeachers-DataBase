{% extends "layout.njk" %}

{% block content %}

<div class="card">
  <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
  <section class="information">
      <h3>Informações do Professor</h3>

      <div class="item">
          <div>Professor</div>
          <div>{{teacher.name}}</div>
      </div>
      <div class="item">
          <div>Idade</div>
          <div>{{teacher.age}}</div>
      </div>
      <div class="item">
          <div>Nível Acadêmico</div>
          <div>{{teacher.academic_level}}</div>
      </div>
      <div class="item">
          <div>Aulas</div>
          <div>{{"Presencial" if teacher.class_type === "P"
            else "EAD"}}</div>
      </div>
      <div class="item">
          <div>Disciplinas Ministradas</div>
          <div>
            {% for discipline in teacher.disciplines %}
              <span> {{discipline}} </span>
            {% endfor %}
          </div>
      </div>
      <div class="item">
          <div>Cadastrado na Plataforma</div>
          <div>{{teacher.create_at}}</div>
      </div>
      <a href="/teachers/{{teacher.id}}/edit" class="button">Editar</a>

  </section>
</div>

{% endblock %}
