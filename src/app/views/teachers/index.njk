{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
  <a href="/teachers/create">Novo</a>
  <table width="100%">
    <thead>
      <tr>
        <th>Professor</th>
        <th>Disciplinas</th>
        <th>Informações</th>
      </tr>
    </thead>
    {% for teacher in teachers %}
      <tbody>
        <tr>
          <td>
            <span style="background-image: url({{teacher.avatar_url}})"></span>{{teacher.name}}
          </td>
          <td>{{teacher.disciplines}}</td>
          <td><a href="/teachers/{{teacher.id}}">Visualizar</a></td>
        </tr>
      </tbody>
    {% endfor %}
  </table>
</div>

{% endblock %}
