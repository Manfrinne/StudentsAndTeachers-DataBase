{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">

  <div class="header">
    <a class="button" href="/teachers/create">Novo</a>
    <form action="/teachers" method="GET">
      <input type="text" name="filter" placeholder="Nome ou atendimento" value={{filter}}>
      <button type="submit">Filtrar</button>
    </form>
  </div>


  <table width="100%">
    <thead>
      <tr>
        <th>Professor</th>
        <th>Disciplinas</th>
        <th>Informações</th>
      </tr>
    </thead>
    {% for teacher in teachers %}
      <tbody>
        <tr>
          <td>
            <span style="background-image: url({{teacher.avatar_url}})"></span>{{teacher.name}}
          </td>
          <td>{{teacher.disciplines}}</td>
          <td><a href="/teachers/{{teacher.id}}">Visualizar</a></td>
        </tr>
      </tbody>
    {% endfor %}
  </table>

  <div class="pagination"
    data-page={{pagination.page}}
    data-total={{pagination.total}}
    data-filter={{filter}}
  ></div>

</div>

{% endblock %}
